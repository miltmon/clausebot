# ClauseBot API - Environment Configuration Template
# Copy this to .env and fill in your actual values

# Airtable Configuration (REQUIRED)
AIRTABLE_API_KEY=your_airtable_pat_here
AIRTABLE_BASE_ID=your_base_id_here
AIRTABLE_TABLE=Questions
AIRTABLE_VIEW=Grid view

# Alternative Airtable env names (for backward compatibility)
# AIRTABLE_PAT=your_airtable_pat_here
# AIRTABLE_V2_BASE_ID=your_base_id_here
# AIRTABLE_V2_QUESTIONS_TABLE=Questions
# AIRTABLE_V2_QUESTIONS_VIEW=Grid view

# Application Configuration
APP_NAME=clausebot-api
APP_VERSION=0.1.0

# Feature Flags - Security Gates
# CRITICAL: Keep FEATURE_CLAUSEBOT_PUBLIC=false until explicit public launch approval
FEATURE_CLAUSEBOT_PUBLIC=false

# Edge Security - API Protection
# Require API key authentication for /v1/* endpoints
API_KEY_REQUIRED=true
API_KEYS=key1,key2,key3  # Comma-separated list of valid API keys

# IP Allowlist (comma-separated, optional)
# Only these IPs can access /v1/* endpoints when set
# IP_ALLOWLIST=10.0.0.0/8,192.168.1.0/24,203.0.113.45

# Rate Limiting (requests per minute)
# Lower rate limit when FEATURE_CLAUSEBOT_PUBLIC=false to deter scraping
RATE_LIMIT_PER_MINUTE=5
RATE_LIMIT_PUBLIC_PER_MINUTE=60

# CORS Configuration (comma-separated, optional - defaults are in code)
# CORS_ALLOW_ORIGINS=https://custom-domain.com,https://another-domain.com

# SEO & Public Access Controls
ROBOTS_NOINDEX_PREVIEW=true
ROBOTS_NOINDEX_DOCS=true

# Server Configuration (for local development)
# HOST=0.0.0.0
# PORT=8081
